<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Rooms</title>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #f4f6f8;
        }

        /* Navbar */
        nav {
            background-color: #1f2933;
            color: #fff;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            z-index: 10;
        }

        nav .logo {
            font-size: 22px;
            font-weight: bold;
        }

        nav ul {
            list-style: none;
            display: flex;
            gap: 20px;
        }

        nav ul li a {
            color: white;
            text-decoration: none;
            font-size: 16px;
            padding: 6px 10px;
            border-radius: 4px;
        }

        nav ul li a:hover {
            background-color: #3a4a5a;
        }

        /* Hero Section */
        .hero {
            position: relative;
            height: 50vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            background-color: black;
        }

        .hero-video {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.25;
        }

        .hero-content {
            position: relative;
            z-index: 1;
            text-align: center;
            color: white;
        }

        .hero-content h1 {
            font-size: 44px;
            margin-bottom: 10px;
        }

        .hero-content p {
            font-size: 20px;
        }

        /* Content */
        .container {
            padding: 40px;
        }

        .rooms-grid {
            max-width: 1100px;
            margin: auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
        }

        .room-card {
            background: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .room-card h3 {
            color: #1f2933;
            margin-bottom: 8px;
        }

        .room-card p {
            color: #555;
            font-size: 14px;
            margin-bottom: 15px;
        }

        .room-meta {
            font-size: 13px;
            color: #666;
            margin-bottom: 15px;
        }

        .room-actions {
            display: flex;
            gap: 10px;
        }

        .btn {
            flex: 1;
            padding: 10px;
            font-size: 14px;
            border-radius: 6px;
            text-align: center;
            text-decoration: none;
            color: white;
        }

        .btn-primary {
            background-color: #2563eb;
        }

        .btn-primary:hover {
            background-color: #1d4ed8;
        }

        .btn-secondary {
            background-color: #64748b;
        }

        .btn-secondary:hover {
            background-color: #475569;
        }

        .empty-state {
            text-align: center;
            color: #555;
            margin-top: 40px;
        }
    </style>
</head>
<body>

    <!-- Navigation Bar -->
    <nav>
        <div class="logo">Hi, <%= userdata.username %></div>
        <ul>
            <li><a href="/post-home/<%=userdata._id%>">Home</a></li>
            <li><a href="/get-room/<%= userdata._id %>">Project Rooms</a></li>
            <li><a href="/logout/<%= userdata._id %>">Logout</a></li>
        </ul>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <video autoplay muted loop playsinline class="hero-video">
            <source src="/hero.mp4" type="video/mp4">
        </video>

        <div class="hero-content">
            <h1>Your Project Rooms</h1>
            <p>Access and manage your saved rooms</p>
        </div>
    </section>

    <!-- Rooms Section -->
    <div class="container">

        <div class="rooms-grid">
            <% if (data && data.length > 0) { %>
                <% data.forEach(room => { %>
                    <div class="room-card">
                        <h3><%= room.projectName || "Untitled Room" %></h3>
                        <p><%= room.description || "No description available." %></p>

                        <div class="room-meta">
                            <strong>Room ID:</strong> <%= room._id %><br>
                            <strong>Type:</strong> <%= room.roomType %>
                        </div>

                        <div class="room-actions">
                            <form action="/room/<%= room._id %>" method="post">
                                <input type="hidden" value="<%=userdata._id%>" name="userid">
                                <button value="submit" class="btn btn-primary" >Enter</button>
                            </form>
                            <a href="/invite-mem/<%= room._id %>" class="btn btn-secondary">Invite Members</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="empty-state">
                    <h2>No Rooms Found</h2>
                    <p>You havenâ€™t created or saved any rooms yet.</p>
                </div>
            <% } %>
        </div>

    </div>

</body>
</html>
