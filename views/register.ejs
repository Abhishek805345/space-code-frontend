<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Register | MyProject</title>

<style>
:root {
  --primary: #4f46e5;
  --primary-dark: #4338ca;
  --text: #0f172a;
  --muted: #64748b;
  --border: #e5e7eb;
  --nav-bg: rgba(15,23,42,0.9);
}

/* RESET */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Inter, "Segoe UI", sans-serif;
}

body {
  min-height: 100vh;
  background: linear-gradient(135deg, #eef2ff, #f8fafc);
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 90px;
}

/* =======================
   NAVBAR (REMEMBERED)
======================= */
nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 18px 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: transparent;
  z-index: 200;
  transition: background .3s ease, box-shadow .3s ease;
}

nav.scrolled {
  background: var(--nav-bg);
  backdrop-filter: blur(10px);
  box-shadow: 0 10px 30px rgba(0,0,0,.25);
}

nav h2 {
  font-size: 22px;
  letter-spacing: 1px;
  color: #0f172a;
  transition: color .3s ease;
}

nav.scrolled h2 {
  color: white;
}

.nav-links {
  display: flex;
  gap: 30px;
}

.nav-links a {
  text-decoration: none;
  font-weight: 500;
  position: relative;
  color: #0f172a;
  transition: color .3s ease;
}

nav.scrolled .nav-links a {
  color: #e5e7eb;
}

.nav-links a::after {
  content: "";
  position: absolute;
  width: 0;
  height: 2px;
  bottom: -6px;
  left: 0;
  background: var(--primary);
  transition: .3s;
}

.nav-links a:hover::after {
  width: 100%;
}

/* Hamburger */
.hamburger {
  display: none;
  font-size: 26px;
  cursor: pointer;
}

/* =======================
   AUTH WRAPPER
======================= */
.auth-wrapper {
  width: 100%;
  max-width: 1100px;
  min-height: 650px;
  background: white;
  border-radius: 22px;
  box-shadow: 0 30px 70px rgba(0,0,0,.18);
  display: flex;
  overflow: hidden;
}

/* LEFT IMAGE */
.auth-image {
  flex: 1;
  background: url("/login-visual.jpg") center/cover no-repeat;
  position: relative;
  perspective: 1000px;
}

.auth-image::after {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(
    rgba(15,23,42,.2),
    rgba(15,23,42,.55)
  );
}

/* 3D STICKER */
.sticker {
  position: absolute;
  bottom: 60px;
  left: 50px;
  width: 230px;
  height: 150px;
  background: rgba(255,255,255,0.15);
  backdrop-filter: blur(14px);
  border-radius: 18px;
  box-shadow:
    0 30px 60px rgba(0,0,0,.35),
    inset 0 0 0 1px rgba(255,255,255,.25);
  transform-style: preserve-3d;
  animation: float3d 6s ease-in-out infinite;
}

.sticker::before {
  content: "Join MyProject";
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 22px;
  font-weight: 700;
  letter-spacing: 1px;
  transform: translateZ(20px);
}

@keyframes float3d {
  0% {
    transform: rotateX(10deg) rotateY(-10deg) translateY(0);
  }
  50% {
    transform: rotateX(15deg) rotateY(10deg) translateY(-12px);
  }
  100% {
    transform: rotateX(10deg) rotateY(-10deg) translateY(0);
  }
}

/* RIGHT FORM */
.auth-form {
  flex: 1;
  padding: 60px 70px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.brand {
  font-size: 22px;
  font-weight: 700;
  margin-bottom: 35px;
}

.auth-form h2 {
  font-size: 32px;
}

.subtitle {
  color: var(--muted);
  font-size: 14px;
  margin: 8px 0 24px;
}

.error {
  color: #dc2626;
  font-size: 14px;
}

/* INPUTS */
.input-group {
  margin-bottom: 18px;
}

.input-group label {
  font-size: 14px;
  margin-bottom: 6px;
  display: block;
}

.input-group input {
  width: 100%;
  padding: 14px;
  border-radius: 12px;
  border: 1px solid var(--border);
}

.input-group input:focus {
  border-color: var(--primary);
  box-shadow: 0 0 0 4px rgba(79,70,229,.15);
}

/* BUTTON */
button {
  width: 100%;
  padding: 14px;
  margin-top: 10px;
  background: linear-gradient(135deg, var(--primary), var(--primary-dark));
  color: white;
  border: none;
  border-radius: 14px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
}

button:hover {
  transform: translateY(-2px);
  box-shadow: 0 14px 35px rgba(79,70,229,.4);
}

/* FOOTER */
.form-footer {
  margin-top: 26px;
  font-size: 14px;
  color: var(--muted);
}

.form-footer a {
  color: var(--primary);
  font-weight: 600;
}

/* MOBILE */
@media (max-width: 900px) {
  .hamburger { display: block; }

  .nav-links {
    position: absolute;
    top: 70px;
    right: 0;
    width: 100%;
    background: var(--nav-bg);
    flex-direction: column;
    padding: 20px;
    display: none;
  }

  .nav-links.active {
    display: flex;
  }

  .nav-links a {
    color: white;
  }

  .auth-wrapper {
    flex-direction: column;
  }

  .auth-image {
    min-height: 240px;
  }

  .sticker {
    left: 50%;
    transform: translateX(-50%);
  }

  .auth-form {
    padding: 40px;
  }
}
</style>
</head>

<body>

<!-- NAVBAR -->
<nav id="navbar">
  <h2>Code_Space</h2>

  <div class="hamburger" onclick="toggleMenu()">â˜°</div>

  <div class="nav-links" id="menu">
    <a href="/home">Home</a>
  </div>
</nav>

<!-- REGISTER -->
<div class="auth-wrapper">

  <div class="auth-image">
    <div class="sticker"></div>
  </div>

  <div class="auth-form">
    <div class="brand">MyProject</div>

    <h2>Create account</h2>
    <p class="subtitle">
      Register to continue
      <% if (error && error.length > 0) { %>
        <div class="error">User already exists. Please login.</div>
      <% } %>
    </p>

    <form action="/post-register" method="POST">
      <div class="input-group">
        <label>Full Name</label>
        <input type="text" name="username" required />
      </div>

      <div class="input-group">
        <label>Email</label>
        <input type="email" name="email" required />
      </div>

      <div class="input-group">
        <label>Password</label>
        <input type="password" name="password" required />
      </div>

      <div class="input-group">
        <label>Confirm Password</label>
        <input type="password" name="confirmpassword" required />
      </div>

      <input type="hidden" name="mycurrentroom" value="0" />

      <button type="submit">Register</button>

      <div class="form-footer">
        Already have an account?
        <a href="/login-in">Log in</a>
      </div>
    </form>
  </div>

</div>

<script>
/* NAV SCROLL EFFECT */
const navbar = document.getElementById("navbar");

window.addEventListener("scroll", () => {
  if (window.scrollY > 50) {
    navbar.classList.add("scrolled");
  } else {
    navbar.classList.remove("scrolled");
  }
});

/* HAMBURGER */
function toggleMenu() {
  document.getElementById("menu").classList.toggle("active");
}
</script>

</body>
</html>
