    <style>
       /* =======================
   RESET & BASE
======================= */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Inter, Arial, sans-serif;
}


body {
      background: #f8fafc;
  color: #0f172a;
  font-family:
    -apple-system,
    BlinkMacSystemFont,
    "SF Pro Text",
    "SF Pro Display",
    Inter,
    Segoe UI,
    Roboto,
    Helvetica,
    Arial,
    sans-serif;
}


/* =======================
   NAVBAR
======================= */
nav {
  height: 60px;
  background: #0f172a;
  color: #e5e7eb;
  padding: 0 32px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 10;
  box-shadow: 0 4px 16px rgba(15,23,42,0.25);
}

nav .logo {
  font-size: 20px;
  font-weight: 700;
  letter-spacing: 0.3px;
}

/* Nav list */
nav ul {
  list-style: none;
  display: flex;
  align-items: center;
  gap: 20px;
  height: 100%;
}

nav ul li {
  display: flex;
  align-items: center;
  height: 100%;
}

nav ul li a {
  display: flex;
  align-items: center;
  height: 100%;
  color: #e5e7eb;
  text-decoration: none;
  font-size: 14px;
  padding: 6px 10px;
  border-radius: 6px;
  transition: background 0.2s ease;
}

nav ul li a:hover {
  background: rgba(255,255,255,0.08);
}

/* =======================
   HAMBURGER BUTTON
======================= */
#hambutton {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  background: transparent;
  border: none;
  cursor: pointer;
}

#hambutton img {
  display: block;
  opacity: 0.9;
}

/* =======================
   HAMBURGER MENU
======================= */
.ham {
  position: absolute;
  top: 64px;
  right: 24px;
  width: 220px;
  background: #020617;
  border-radius: 14px;
  padding: 12px;
  box-shadow: 0 20px 40px rgba(0,0,0,0.45);
  display: none;
  z-index: 999;
}

.ham.active {
  display: block;
}

.ham ul {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.ham ul li button {
  width: 100%;
  background: transparent;
  color: #e5e7eb;
  border: none;
  padding: 10px 12px;
  border-radius: 10px;
  font-size: 14px;
  text-align: left;
  cursor: pointer;
}

.ham ul li button:hover {
  background: #1e293b;
}

/* =======================
   HERO SECTION
======================= */
.hero {
  position: relative;
  height: 70vh;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  background: #020617;
}

.hero-video {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.18;
}

.hero-content {
  position: relative;
  z-index: 1;
  text-align: center;
  color: #f8fafc;
}

.hero-content h1 {
  font-size: 44px;
  font-weight: 700;
  letter-spacing: -0.5px;
}

.hero-content p {
  margin-top: 6px;
  font-size: 18px;
  color: #cbd5e1;
}

/* =======================
   MAIN CONTAINER
======================= */
.container {
  padding: 50px 40px;
  text-align: center;
}

.container h1 {
  font-size: 28px;
  font-weight: 700;
  color: #0f172a;
}

.container p {
  margin-top: 6px;
  font-size: 16px;
  color: #64748b;
}

/* =======================
   PRIMARY BUTTON
======================= */
.create-project-btn {
  display: inline-block;
  margin-top: 28px;
  padding: 12px 28px;
  background: linear-gradient(135deg, #4f46e5, #4338ca);
  color: #ffffff;
  text-decoration: none;
  font-size: 14px;
  font-weight: 600;
  border-radius: 10px;
  box-shadow: 0 6px 16px rgba(79,70,229,0.25);
  transition: all 0.25s ease;
}

.create-project-btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 10px 24px rgba(79,70,229,0.35);
}

/* =======================
   STATS
======================= */
.stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 22px;
  margin-top: 50px;
}

.stat-card {
  background: #ffffff;
  padding: 26px;
  border-radius: 16px;
  border: 1px solid #e5e7eb;
  box-shadow: 0 6px 18px rgba(15,23,42,0.06);
}

.stat-card h3 {
  font-size: 30px;
  font-weight: 700;
  color: #4338ca;
}

/* =======================
   FEATURES
======================= */
.features {
  margin-top: 80px;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 26px;
  margin-top: 26px;
}

.feature-card {
  background: #ffffff;
  padding: 26px;
  border-radius: 16px;
  border: 1px solid #e5e7eb;
  box-shadow: 0 6px 18px rgba(15,23,42,0.06);
  text-align: left;
}

.feature-card h3 {
  font-size: 18px;
  color: #4338ca;
  margin-bottom: 8px;
}

.feature-card p {
  color: #64748b;
  font-size: 14px;
}

/* =======================
   RECENT ACTIVITY
======================= */
.recent {
  margin-top: 80px;
}

.recent-box {
  background: #ffffff;
  padding: 26px;
  border-radius: 16px;
  border: 1px solid #e5e7eb;
  box-shadow: 0 6px 18px rgba(15,23,42,0.06);
  max-width: 800px;
  margin: auto;
  color: #64748b;
}

/* =======================
   FOOTER
======================= */
footer {
  background: #0f172a;
  color: #94a3b8;
  padding: 48px 32px;
  margin-top: 90px;
}

.footer-content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 32px;
}

footer h3 {
  color: #f8fafc;
  margin-bottom: 10px;
}

footer a {
  color: #94a3b8;
  text-decoration: none;
  display: block;
  margin-bottom: 6px;
}

footer a:hover {
  color: #e5e7eb;
}

.footer-bottom {
  text-align: center;
  margin-top: 32px;
  font-size: 13px;
  color: #64748b;
}



    </style>
